<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">


    <Button
        android:id="@+id/work"
        android:onClick="workClick"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="276dp"
        android:layout_marginEnd="0dp"
        android:backgroundTint="#03A9F4"
        android:text="Work" />

    <Button
        android:id="@+id/social"
        android:onClick="socialClick"
        android:layout_width="413dp"
        android:layout_height="72dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="202dp"
        android:layout_marginEnd="0dp"
        android:backgroundTint="#C8B618"
        android:text="Social" />

    <Button
        android:id="@+id/extracurricular"
        android:onClick="extracurricularClick"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="129dp"
        android:layout_marginEnd="0dp"
        android:backgroundTint="#FF9800"
        android:text="Extracurricular" />

    <Button
        android:id="@+id/academic"
        android:onClick="academicClick"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="56dp"
        android:text="Academic" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_navigation"
        app:menu="@menu/menu_navigation"
        android:layout_alignParentBottom="true"/>

    <Button
        android:id="@+id/profile"
        android:layout_width="56dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/ic_user"
        android:backgroundTint="#000000"
        android:onClick="profileClick"
        app:iconTint="#000000"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/notification"
        android:layout_width="54dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/ic_notification"
        android:onClick="notificationsClick"
        tools:ignore="SpeakableTextPresentCheck" />


</RelativeLayout>